{
  "name": "nepalipatrojs",
  "version": "1.0.1",
  "description": "A JavaScript library for Nepali date conversion and calendar utilities",
  "type": "module",
  "main": "dist/nepali-patro-js.umd.js",
  "module": "dist/nepali-patro-js.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/nepali-patro-js.esm.js",
      "require": "./dist/nepali-patro-js.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./css": "./dist/nepali-patro-js.css",
    "./styles": "./dist/only-styles.css"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nepali",
    "calendar",
    "date",
    "patro",
    "bs",
    "ad",
    "conversion"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "rollup": "^4.46.1",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-postcss": "^4.0.2",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
